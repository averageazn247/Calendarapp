<% provide(:title, 'Events') %>

 
   
 <% @events.each do |event| %>
	 <div class="event_index">
	 	<h2><%= link_to event.name, event %>  </h2>
	 		Event Day: <b><%= event.dayof %>  </b>
	 		
	 		<p>Created by : <%= event.creator%>  </p>
		 		Description:
			<p> <%= simple_format event.description %></p>
	 <div>
 <% end %>


