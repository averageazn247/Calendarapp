
<% provide(:title, 'create new event') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %> 
<section>
      <%= f.label " name of event"%>
      <%= f.text_field :name %>
      <%= f.label " Description of event"%>
      <%= f.text_area :description %> 
      
      </section>
      <%= f.hidden_field :creator, :value=> :creator%>
      
      <section>
	  <%= f.label :date%>
	  <%= f.text_field :dayof%>
 </section>

<section>
 	Set long Term Reminders
 	
 	<p>
 		<br> Daily<%= f.radio_button :daily, 'Daily' %> 
 		Weekly<%= f.radio_button :weekly, 'Weekly' %> 
 		Weekends<%= f.radio_button :weekends, 'Weekends' %> 
 		Weekdays<%= f.radio_button :weekdays, 'Weekdays' %> 
 		Biweekly<%= f.radio_button :biweekly, 'Biweekly' %> 
 		Monthly<%= f.radio_button :monthly, 'Monthly' %> 
 		Quarterly<%= f.radio_button :quarterly, "Quarterly"%>
 		Semiyearly<%= f.radio_button :semiyearly, "Semiyearly"%>
 		Yearly<%= f.radio_button :yearly, "yearly"%>
 		
 		
 		
 		
 	</p>
 
 
	  Set Reminder 
	  <p>
	  	
 			  	Monday: <%= f.check_box :monday %>
	  	Tuesday: <%= f.check_box :tuesday %>
	  	Wednesday: <%= f.check_box :wedsday %>
	  	Thusday: <%= f.check_box :thursday %>
	  	Friday: <%= f.check_box :friday %>
	  	Saterday: <%= f.check_box :satday %>
	  	Sunday: <%= f.check_box :sunday %> 
	  </p>
	

	</section>
 
      <%= f.submit "Create event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>